<div class="container mt-4">
    <div class="row justify-content-center">
        <h1 class="text-center mb-4"> Showing User Profile </h1>
        <div class="col-6 border">
            <div class="row border">
                <div class="col userHeaderList border-end">
                    Username: 
                </div>
                <div class="col-8 userDataList">  
                    <%= @user.username %>
                </div>
            </div>
            <div class="row border">
                <div class="col userHeaderList border-end">
                    Email: 
                </div>
                <div class="col-8 userDataList">
                     <%= @user.email %>
                </div>
            </div>
            <div class="row border">
                <div class="col userHeaderList border-end">
                    Password: 
                </div>
                <div class="col-8 userDataList">
                     *******
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-4">
            <div class="col-6 d-flex justify-content-evenly">
                <%= link_to "Edit", edit_user_path(@user.id), class: "btn btn-primary w-25" %>
                <%= link_to "Delete your profile", user_path(current_user), class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            </div>
        </div>
    </div>
</div>