     <%= bootstrap_form_with(model: @user, local: true) do |f| %>
        <%= f.text_field :username %>
        <%= f.email_field :email %>
        <%= f.password_field :password %>
            <%= bootstrap_form_for :sections do |s| %>
            <%= s.select :sections_id, Section.all.collect { |sect|[sect.name, sect.id] }, {include_blank: true} %>
        <%= f.primary %>        
        <% end %>
    <% end %>