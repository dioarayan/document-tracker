<div class="container">
    <div class="row jusftify-content">
        <div class="col-6">

            <div class="table-responsive">
                <table class="table align-middle caption-top">
                <caption>List of users</caption>
                    <thead class="text-center">
                        <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Username</th>
                        <th scope="col">Email</th>
                        <th scope="col" colspan="2">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider">
                        <% @users.each do |user| %>
                        <tr>
                            <th scope="row"><%= user.id %></th>
                            <td><%= user.username %></td>
                            <td><%= user.email %></td>
                            <td><%= link_to 'Edit', edit_user_path(user.id), class: "btn btn-primary" %></td>
                            <td><%= link_to 'Delete', users_path, class: "btn btn-danger" %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>