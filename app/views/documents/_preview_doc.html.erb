<%= turbo_frame_tag "document_#{@document.id}" do %>
      <%= bootstrap_form_with(model: [@document, @route]) do |doc| %>
        <%= doc.static_control :name, label_class: "label_preview", wrapper: { class: 'd-flex flex-row m-3'}, value: @document.name %>
        <%= doc.static_control :description, label_class: "label_preview", wrapper: { class: 'd-flex flex-row m-3'}, value: @document.description %>
        <%= doc.static_control :user_id, label_class: "label_preview", wrapper: { class: 'd-flex flex-row m-3'}, value: @document.user.username %>
        <%= doc.static_control :category_id, label_class: "label_preview", wrapper: { class: 'd-flex flex-row m-3'}, value: @document.category.name %>
        <%= doc.static_control :status_id, label_class: "label_preview", wrapper: { class: 'd-flex flex-row m-3'}, value: @document.status.statusName %>
        <%= doc.submit "Accept", class: "btn btn-success" %>
        
      <% end %>.
  <% end %>