<%= turbo_frame_tag :remote_modal, target: :_top do %>
    <div class="modal fade" id="<%=dom_id document %>" tabindex="-1" aria-labelledby="<%=dom_id document %>_modalLabel" aria-hidden="true"
        data-controller="bs-modal", data-action="click->bs-modal#disconnect">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title fs-5" id="<%=dom_id document %>_modalLabel""><%= document.name%></h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">
                    <span class="badge bg-success"> <%= document.category.name %> </span>
                    <h6 class="mb-2"><%= document.description%></h6>
                    <p>Created on <%= document.created_at %> </p>
                </div>
            </div>
        </div>
         <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <%= link_to "Edit", edit_document_path, class: "btn btn-primary" %>
        </div>
        </div>
    </div>
    </div>
<% end %>