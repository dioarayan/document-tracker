 
  <div class="row justify-content-center">
    <div class="col-6 p-3">
      <h4>Pending documents</h4>
      <div class="trackContainer">
        <div class="list-group p-1">
          <% @documents.each do |document| %>
              <% if logged_in? && document.routes.last.receiving_user == current_user %>
                <%= turbo_frame_tag "document_#{document.id}" do %>
                    <%= render 'document', document: document %>
                <% end %>
              <% end %>
          <% end %>
        </div> 
      </div>
    </div>
    <div class="col-6 p-3">
      <h4>Document Information</h4>
        <div id="doc_details">
        </div>
    </div>
  </div>