<%= bootstrap_form_for(document) do |f| %>
        <div class="modal-body">
            <%= f.select :category_id, Category.all.collect{ |p| [ p.name, p.id ]}, { prompt: "Choose document category"} %>
            <%= f.select :division_id, Division.all.collect{ |p| [ p.name, p.id ]}, { prompt: "Choose document category"}, data: { action: "change->division#change"} %>
            <%= f.select :section_id, Section.all.collect{ |p| [ p.name, p.id ]}, { prompt: "Choose document category"} %>
            <%= f.grouped_collection_select :section_id, Division.order(:name), :sections, :name, :id, :name, { prompt: "Choose origin"} %>
            <%= f.text_field :name %>
            <%= f.text_area :description, readonly: true %>
                <%= f.fields_for(:routes, Route.new) do |r| %>
                    <%= r.select :receiving_user_id, User.all.collect{ |u| [u.username, u.id]}, {prompt: "Choose receiving user"} %>
            <% end %>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <%= f.submit class: "btn btn-primary", data: {action: "click->bs-modal#submitForm"} %>
        </div>

<% end %>