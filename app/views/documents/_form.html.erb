<%= bootstrap_form_for(document) do |f| %>
        <div class="modal-body">
            <%= f.select :category_id, Category.all.collect{ |p| [ p.name, p.id ]}, { prompt: "Choose document category"}, disabled: true  %>
            <%= f.text_field :name, readonly: true %>
            <%= f.text_area :description, readonly: true %>
                <%= f.fields_for(:routes, Route.new) do |r| %>
                    <%= r.select :receiving_user_id, User.all.collect{ |u| [u.username, u.id]}, {prompt: "Choose receiving user"}, readonly: true %>
            <% end %>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <%= f.submit class: "btn btn-primary", data: {action: "click->bs-modal#submitForm"} %>
        </div>

<% end %>