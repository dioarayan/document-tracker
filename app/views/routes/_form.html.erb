<div class="modal-body">
    
    <p><strong>Name/Title: </strong> <%= @document.name %></p>
    <p><strong>Description: </strong> <%= @document.description %></p>
    <p><strong>Origin: </strong> <%= @document.section.name %></p>
    <%= bootstrap_form_with(model: [@document, @route]) do |f| %>
        <%= f.hidden_field :document_id, value: @document.id %>
        <%= f.select :receiving_user_id, User.all.collect{ |u| [u.username, u.id]}, {prompt: "Forward to"} %>
        <%= f.text_area :remarks %>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <%= f.submit "Send", class: "btn btn-primary", data: {action: "click->bs-modal#submitForm"} %> 
    </div>
<% end %>