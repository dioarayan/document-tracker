<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <h3>To be received</h3>
             <div class="trackContainer">
                <% @routes.each do |route| %>
                    <% if logged_in? && (route.receiving_user == current_user || current_user.admin?) %>
                        <div class="list-group p-1">
                            <a href="documents/<%= route.document.id %>/edit" class="list-group-item list-group-item-action" aria-current="true">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1"><%= route.document.name %></h5>
                                    <small> <%= time_ago_in_words(route.created_at) %> ago</small>
                                </div>
                                <h6> <span class="badge bg-success"><%= route.document.category.name %></span></h6>
                                <small><%= route.remarks %></small>
                            </a>
                        </div>
                    <% end %>
                <% end %>
            </div>    
        </div>
            <div class="col-md-3">
            <h3>For processing:</h3>
            <div class="trackContainer">
                <div class="list-group p-1">
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">Sample processing doc</h5>
                            <small class="text-body-secondary">3 days ago</small>
                        </div>
                        <h6> <span class="badge bg-success"> Activity Proposal </span></h6>
                        <small class="text-body-secondary">And some muted small print.</small>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <h3> Released </h3>
            <div class="trackContainer">
                <div class="list-group p-1">
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">Sample processing doc</h5>
                            <small class="text-body-secondary">3 days ago</small>
                        </div>
                        <h6> <span class="badge bg-success"> Activity Proposal </span></h6>
                        <small class="text-body-secondary">And some muted small print.</small>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <h3> Forwarded </h3>
             <div class="trackContainer">
                <div class="list-group p-1">
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">Sample processing doc</h5>
                            <small class="text-body-secondary">3 days ago</small>
                        </div>
                        <h6> <span class="badge bg-success"> Activity Proposal </span></h6>
                        <small class="text-body-secondary">And some muted small print.</small>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

