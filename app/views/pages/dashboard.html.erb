
    <div class="row justify-content-center my-3 mx-1">
        <div class="col-md-4">
            <h3> Pending </h3>
            <div class="trackContainer">
                <div class="list-group p-1">
                    <% @documents.each do |document| %>
                        <% if document.pending? %>
                            <%= render 'documents/document', document: document %>
                        <% end %>
                    <% end %>
                </div> 
            </div>    
        </div>
        <div class="col-md-4">
            <h3> Processing </h3>
            <div class="trackContainer">
                <div class="list-group p-1">
                    <% @documents.each do |document| %>
                        <% if document.processing? %>
                            <%= render 'documents/document', document: document %>
                        <% end %>
                    <% end %>
                </div> 
            </div>    
        </div>
        <div class="col-md-4">
            <h3> Completed </h3>
            <div class="trackContainer">
                 <div class="list-group p-1">
                    <% @documents.each do |document| %>
                        <% if document.completed? %>
                            <%= render 'documents/document', document: document %>
                        <% end %>
                    <% end %>
                </div> 
            </div>    
        </div>
    </div>