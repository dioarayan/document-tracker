development: &db
  adapter: mysql2
  encoding: utf8
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  url: <%= ENV["DATABASE_DEV_URL"] %>
  variables:
    sql_mode: traditional 

test:
  <<: *db
  adapter: mysql2
  url: <%= ENV["DATABASE_TEST_URL"] %>
  variables:
    sql_mode: traditional

production:
  <<: *db
  url: <%= ENV["DATABASE_PROD_URL"] %>
  variables:
    sql_mode: traditional
